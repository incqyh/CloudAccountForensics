<Page x:Class="CAF.View.Pages.Message"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Message">

    <DataGrid Name="MessageView" AutoGenerateColumns="False" CanUserAddRows="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="手机号" Binding="{Binding phoneNumber}"/>
            <DataGridTextColumn Header="接收/发送" Binding="{Binding direction}"/>
            <DataGridTextColumn Header="短信时间" Binding="{Binding messageTime}"/>
            <DataGridTextColumn Header="短信内容" Binding="{Binding content}"/>
        </DataGrid.Columns>
    </DataGrid>
</Page>
