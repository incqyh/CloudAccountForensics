                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="地址" DisplayMemberBinding="{Binding Address}" />
                    <GridViewColumn Header="时间" DisplayMemberBinding="{Binding Time}" />
                    <GridViewColumn Header="拍摄手机" DisplayMemberBinding="{Binding PhoneType}" />
                </GridView>
            </ListView.View>
        </ListView-->
    </Grid>
</Page>
